<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FriendInfo"
    tools:showIn="@layout/activity_friend_info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:background="@drawable/lightgray">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/infoContainer"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:background="@drawable/pureWhite">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/basicInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Info:"
                android:typeface="serif"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/age"
                android:layout_below="@+id/basicInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 year-old"
                android:textSize="18sp"
                android:textColor="@drawable/black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/email"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="whitehouse@gmail.com"
                android:layout_below="@id/age"
                android:textSize="18sp"
                android:textColor="@drawable/black"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/address"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Columbia Univ."
                android:layout_below="@id/email"
                android:textSize="18sp"
                android:textColor="@drawable/black"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tvTopicLists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topics:"
                android:typeface="serif"
                android:textSize="20dp"
                android:layout_below="@id/address"
                android:layout_centerHorizontal="true"
                />

            <ListView
                android:id="@+id/topicLists"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Columbia Univ."
                android:layout_below="@id/tvTopicLists"
                android:textSize="18sp"
                android:textColor="@drawable/black"
                />
        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
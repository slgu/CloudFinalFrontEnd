<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:layout_width="match_parent"
        >


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some title"
            android:typeface="serif"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            />


        <TextView
            android:id="@+id/describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="free free pizza"
            android:layout_below="@id/title"
            android:textSize="18sp"
            android:typeface="sans"
            android:layout_gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like:"
                android:id="@+id/tvLike"
                android:textSize="18sp"
                android:layout_marginRight="24dp"
                android:layout_below="@id/tvDescribe"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999"
                android:layout_below="@id/tvDescribe"
                android:layout_toRightOf="@+id/tvLike"
                android:textSize="18sp"
                android:typeface="serif"
                android:layout_gravity="center"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:text="Video:"
            android:id="@+id/tvVideo"
            android:textSize="18sp"
            android:layout_marginRight="24dp"
            android:layout_below="@id/tvLike"
            />

        <TextView
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:text="VIDEO"
            android:layout_below="@id/tvLike"
            android:layout_toRightOf="@+id/tvVideo"
            android:textSize="18sp"
            />

        <VideoView
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:id="@+id/videoView"
            android:layout_below="@id/video"
            android:layout_marginTop="24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/videoView"
            android:id="@+id/commentLayout"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:id="@+id/commentUserName"
                android:text="Name"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:id="@+id/commentTime"
                android:layout_alignParentRight="true"
                android:text="2015/12/17"
                android:layout_marginRight="100dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/commentContent"
                android:layout_below="@id/commentUserName"
                android:text="This is an awesome video~"
                android:typeface="monospace"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/commentLayout"
            >
            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:id="@+id/etComment"
                />
            <Button
                android:id="@+id/btComment"
                android:layout_marginTop="25dp"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/etComment"
                android:text="Comment"
                android:textSize="8dp"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>